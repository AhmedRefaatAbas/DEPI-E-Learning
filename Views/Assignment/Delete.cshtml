@model DEPI_E_Learning.Models.AssignmentModel

@{
    ViewData["Title"] = "Delete Assignment";
}

<h2>Delete Assignment</h2>

<h3>Are you sure you want to delete this assignment?</h3>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Assignment ID
        </dt>
        <dd class="col-sm-10">
            @Model.AssignmentId
        </dd>
        <dt class="col-sm-2">
            Assignment Name
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Module
        </dt>
        <dd class="col-sm-10">
            @Model.Module?.Title
        </dd>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AssignmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
