@model DEPI_E_Learning.Models.AssignmentModel

@{
    ViewData["Title"] = "Assignment Details";
}

<h2>Assignment Details</h2>

<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Assignment ID
        </dt>
        <dd class="col-sm-10">
            @Model.AssignmentId
        </dd>
        <dt class="col-sm-2">
            Assignment Name
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Module
        </dt>
        <dd class="col-sm-10">
            @Model.Module?.Title
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AssignmentId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
