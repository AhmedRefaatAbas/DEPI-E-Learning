@model DEPI_E_Learning.Models.CourseModel

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>

<h3>Are you sure you want to delete this course?</h3>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course ID
        </dt>
        <dd class="col-sm-10">
            @Model.CourseId
        </dd>
        <dt class="col-sm-2">
            Course Name
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Instructor
        </dt>
        <dd class="col-sm-10">
            @Model.Instructor?.Name
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CourseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
