@model IEnumerable<DEPI_E_Learning.Models.CourseModel>

@{
    ViewData["Title"] = "Courses";
}

<h2>Courses</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Instructor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.Description</td>
                <td>@course.Instructor?.Name</td> <!-- Use null conditional operator for Instructor -->
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger">Delete</a>
                </td>
            </tr>

            <!-- Displaying Sessions related to each Course -->
            @if (course.Sessions != null && course.Sessions.Any())
            {
                <tr>
                    <td colspan="4">
                        <h5>Sessions for @course.Description:</h5>
                        <ul>
                            @foreach (var session in course.Sessions)
                            {
                                <li>@session.Title</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
