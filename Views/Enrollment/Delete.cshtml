@model DEPI_E_Learning.Models.EnrollmentModel

@{
    ViewData["Title"] = "Delete Enrollment";
}

<h2>Delete Enrollment</h2>

<h3>Are you sure you want to delete this enrollment?</h3>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Enrollment ID
        </dt>
        <dd class="col-sm-10">
            @Model.EnrollmentId
        </dd>
        <dt class="col-sm-2">
            Student
        </dt>
        <dd class="col-sm-10">
            @Model.Student?.Name
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course?.Description
        </dd>
        <dt class="col-sm-2">
            Enrolled On
        </dt>
        <dd class="col-sm-10">
            @Model.EnrolledOn.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Completion Date
        </dt>
        <dd class="col-sm-10">
            @Model.CompletionDate?.ToShortDateString()
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EnrollmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
