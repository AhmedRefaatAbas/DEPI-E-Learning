@model DEPI_E_Learning.Models.EnrollmentModel

@{
    ViewData["Title"] = "Enrollment Details";
}

<h2>Enrollment Details</h2>

<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Enrollment ID
        </dt>
        <dd class="col-sm-10">
            @Model.EnrollmentId
        </dd>
        <dt class="col-sm-2">
            Student
        </dt>
        <dd class="col-sm-10">
            @Model.Student?.Name
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Course?.Description
        </dd>
        <dt class="col-sm-2">
            Enrolled On
        </dt>
        <dd class="col-sm-10">
            @Model.EnrolledOn.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Completion Date
        </dt>
        <dd class="col-sm-10">
            @Model.CompletionDate?.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
