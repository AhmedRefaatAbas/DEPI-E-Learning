@model IEnumerable<DEPI_E_Learning.Models.EnrollmentModel>

@{
    ViewData["Title"] = "Enrollments";
}

<h2>Enrollments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Enrollment</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Enrollment ID</th>
            <th>Student</th>
            <th>Course</th>
            <th>Enrolled On</th>
            <th>Completion Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>@enrollment.EnrollmentId</td>
                <td>@enrollment.Student?.Name</td>
                <td>@enrollment.Course?.Title</td>
                <td>@enrollment.EnrolledOn.ToShortDateString()</td>
                <td>@enrollment.CompletionDate?.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@enrollment.EnrollmentId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@enrollment.EnrollmentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
